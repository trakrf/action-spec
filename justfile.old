# ActionSpec - Task Runner
# https://just.systems/

# List all available recipes
default:
    @just --list

# ============================================================================
# Workspace Delegation
# ============================================================================
# Delegate commands to workspace justfiles
# Usage: just <workspace> <command> [args...]
# Example: just frontend dev, just backend test

frontend *args:
    cd frontend && just {{args}}

backend *args:
    cd backend && just {{args}}

# ============================================================================
# Lazy Dev Aliases
# ============================================================================

alias fe := frontend
alias be := backend

# ============================================================================
# Combined Validation Commands
# ============================================================================
# Run checks across all workspaces

lint: (frontend "lint") (backend "lint")

test: (frontend "test") (backend "test")

build: (frontend "build") (backend "build")

validate: lint test build

# Alias for CSW integration
check: validate

# ============================================================================
# Full Stack Development
# ============================================================================

# Docker Compose development (default)
dev:
    @echo "ğŸ³ Starting development environment with Docker Compose..."
    @echo "ğŸ“± Frontend: http://localhost:5173"
    @echo "ğŸ”§ Backend: http://localhost:5000"
    @echo ""
    @echo "Press Ctrl+C to stop"
    docker compose -f docker-compose.dev.yml up --build

# Stop dev environment
dev-down:
    docker compose -f docker-compose.dev.yml down

# View dev logs
dev-logs:
    docker compose -f docker-compose.dev.yml logs -f

# Local development without Docker (native processes)
dev-local:
    #!/usr/bin/env bash
    set -m  # Enable job control

    echo "ğŸš€ Starting local development servers..."
    echo "ğŸ“± Frontend: http://localhost:5173"
    echo "ğŸ”§ Backend: http://localhost:5000"
    echo ""
    echo "Press Ctrl+C to stop both servers"
    echo ""

    # Cleanup function to kill background processes
    cleanup() {
        echo ""
        echo "ğŸ›‘ Stopping servers..."

        # Kill entire process tree (handles Flask's reloader subprocesses)
        for pid in $(jobs -p); do
            # Kill the process and all its descendants
            pkill -15 -P $pid 2>/dev/null || true
            kill -15 $pid 2>/dev/null || true
        done

        # Give them a moment to cleanup gracefully
        sleep 1

        # Force kill any remaining processes
        for pid in $(jobs -p); do
            pkill -9 -P $pid 2>/dev/null || true
            kill -9 $pid 2>/dev/null || true
        done

        exit 0
    }

    # Trap Ctrl+C and cleanup
    trap cleanup INT TERM

    # Start both dev servers in background, redirecting stdin to prevent EIO errors
    (cd frontend && just dev </dev/null) &
    FRONTEND_PID=$!

    (cd backend && just dev </dev/null) &
    BACKEND_PID=$!

    # Wait for both processes
    wait $FRONTEND_PID $BACKEND_PID

# Setup all workspaces
setup:
    @echo "ğŸ“¦ Setting up all workspaces..."
    @just backend setup
    @just frontend install
    @echo "âœ… Setup complete!"

# Clean all workspaces
clean:
    @just backend clean
    @just frontend clean
    @echo "âœ… All workspaces cleaned"

# Check if all environment variables are set
check-env:
    #!/usr/bin/env bash
    if [ -f ".env.local" ]; then
        source .env.local
    fi

    echo "Checking required environment variables..."

    if [ -z "${GH_TOKEN:-}" ]; then
        echo "âŒ GH_TOKEN not set"
    else
        echo "âœ“ GH_TOKEN is set"
    fi

    echo "âœ“ GH_REPO=${GH_REPO:-trakrf/action-spec}"
    echo "âœ“ SPECS_PATH=${SPECS_PATH:-demo/infra}"

# === Docker Compose Commands ===

# Start docker compose services (detached)
up:
    #!/usr/bin/env bash
    set -euo pipefail

    if [ ! -f ".env" ]; then
        echo "âš ï¸  Warning: .env file not found"
        echo "   Copy .env.example and add your GH_TOKEN:"
        echo "   cp .env.example .env"
        echo ""
    fi

    echo "ğŸš€ Starting docker compose services..."
    docker compose up -d
    echo ""
    echo "âœ“ Services started"
    echo "  Spec-editor: http://localhost:5000"
    echo "  Demo app: http://localhost:8080"
    echo ""
    echo "Run 'just logs' to view logs"
    echo "Run 'just ps' to check status"

# Stop docker compose services
down:
    #!/usr/bin/env bash
    echo "ğŸ›‘ Stopping docker compose services..."
    docker compose down
    echo "âœ“ Services stopped"

# View logs from all services
logs:
    docker compose logs -f

# View logs from spec-editor only
logs-spec:
    docker compose logs -f spec-editor

# View logs from demo-app only
logs-demo:
    docker compose logs -f demo-app

# Restart docker compose services
restart:
    #!/usr/bin/env bash
    echo "ğŸ”„ Restarting docker compose services..."
    docker compose restart
    echo "âœ“ Services restarted"

# Restart only spec-editor
restart-spec:
    docker compose restart spec-editor

# Rebuild docker images (no cache)
build-docker:
    #!/usr/bin/env bash
    echo "ğŸ”¨ Building docker images..."
    docker compose build --no-cache
    echo "âœ“ Build complete"

# Rebuild and restart services
rebuild: build-docker
    just down
    just up

# Show running containers
ps:
    docker compose ps

# Check health of spec-editor
health-docker:
    @echo "Checking spec-editor health..."
    @curl -s http://localhost:5000/health | python3 -m json.tool || echo "âŒ Service not responding"

# Pull latest published image from GHCR
pull:
    #!/usr/bin/env bash
    echo "ğŸ“¥ Pulling latest image from GHCR..."
    docker compose pull
    echo "âœ“ Pull complete. Run 'just up' to use the latest image"

# Clean up docker volumes and orphaned containers
clean-docker:
    #!/usr/bin/env bash
    echo "ğŸ§¹ Cleaning up docker resources..."
    docker compose down -v --remove-orphans
    echo "âœ“ Cleanup complete"

