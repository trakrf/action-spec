FROM node:22-slim

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy source code (this will be overridden by bind mount in dev)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start dev server (binding to all interfaces)
CMD ["pnpm", "dev"]
